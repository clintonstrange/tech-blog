<article class="post">
    <div class="title">
        <a href="/post/{{id}}">{{title}}</a>
    </div>
    {{#if "/single-post"}}
    {{contents}}
    {{/if}}
    <div class="meta">
        Post created by {{user.username}} on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>
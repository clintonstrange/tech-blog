<div class="mt-4">
    <div class="columns">
        <article class="post column is-8 is-offset-2">
            <div class="title my-3">
                <p class="has-text-centered">{{post.title}}</p>
            </div>
            {{#if "/single-post"}}
            <p class="has-text-dark my-2 is-italic has-text-weight-bold has-text-centered">
                {{post.contents}}
            </p>
            {{/if}}
            <div class="meta">
                <p class="has-text-centered">
                    Created by {{post.user.username}} on {{format_date post.created_at}}
                    |
                    <a href="/post/{{id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
                </p>
            </div>
        </article>
    </div>

    {{#if signedIn}}
    {{#if "/{{post.id}}"}}
    <div class="edit-post my-4">
        <p class="has-text-centered">
            <a href="edit/{{post.id}}" class="edit-link has-text-centered">~ Edit Post ~</a>
        </p>
    </div>
    {{/if}}

    <div class="columns">
        <div class="column is-4 is-offset-4">
            <form class="comment-form">
                <div>
                    <textarea class="textarea" name="comment-body" placeholder="Comment on this post"></textarea>
                </div>

                <div class="my-4 is-flex">
                    <button class="button is-link" type="submit">Submit Comment</button>
                </div>
            </form>
            {{/if}}
        </div>
    </div>
    <div>
        {{> comments post.comments}}
    </div>
    {{#if signedIn}}
    <script src="/javascript/comment.js"></script>
    {{/if}}
</div>